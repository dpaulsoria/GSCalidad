{
  "expo": {
    "name": "gscalidad",
    "slug": "gscalidad",
    "scheme": "gscalidad",
    "version": "1.0.0",
    "orientation": "default", // Permite rotaciones libres
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "jsEngine": "hermes",
      "supportsTablet": true,
      "bundleIdentifier": "com.santapriscila.gscalidad"
    },
    "android": {
      "jsEngine": "hermes",
      "permissions": ["RECEIVE_BOOT_COMPLETED", "FOREGROUND_SERVICE"],
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.santapriscila.gscalidad"
    },
    "extra": {
      "eas": {
        "projectId": "a0084fab-b4a6-46c3-aa6f-367c7c63280c"
      }
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-background-fetch",
        {
          "minimumFetchInterval": 15
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "La aplicación necesita acceso a tus fotos para seleccionar imágenes."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/logo_salem.png",
          "color": "#ffffff",
          "defaultChannel": "default",
          "sounds": ["./src/assets/notification-sound.wav", "./src/assets/notification-sound-other.wav"]
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "extraPods": [
              {
                "name": "simdjson",
                "configurations": ["Debug", "Release"],
                "path": "../node_modules/@nozbe/simdjson",
                "modular_headers": true
              }
            ]
          }
        }
      ]
    ]
  }
}
