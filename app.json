{
  "expo": {
    "name": "gscalidad",
    "slug": "gscalidad",
    "scheme": "gscalidad",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.santapriscila.gscalidad"
    },
    "android": {
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "FOREGROUND_SERVICE",
        // TODO: Reverificar si este permiso no es un fallo critico de seguridad
        "DETECT_SCREEN_CAPTURE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.santapriscila.gscalidad"
    },
    "extra": {
      "eas": {
        "projectId": "a0084fab-b4a6-46c3-aa6f-367c7c63280c"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      ["@morrowdigital/watermelondb-expo-plugin"],
      "expo-router",
      [
        "react-native-background-fetch",
        {
          "minimumFetchInterval": 15
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableHermes": true,
            "kotlinVersion": "1.6.10",
            "packagingOptions": {
              "pickFirst": [
                "**/libc++_shared.so"
              ]
            }
          },
          // No se usa en ios, pero igual esta
          "ios": {
            "extraPods": [
              {
                "name": "simdjson",
                "configurations": [
                  "Debug",
                  "Release"
                ],
                "path": "../node_modules/@nozbe/simdjson",
                "modular_headers": true
              }
            ]
          }
        }
      ]
    ]
  }
}
